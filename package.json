{
  "name": "agentdock",
  "displayName": "agentdock",
  "description": "Organize and manage AI agent terminal sessions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agentdock",
          "title": "AgentDock",
          "icon": "resources/icons/agentdock.svg"
        }
      ]
    },
    "views": {
      "agentdock": [
        {
          "id": "agentdock.sessionsView",
          "name": "Agent Sessions",
          "contextualTitle": "AgentDock"
        }
      ]
    },
    "commands": [
      {
        "command": "agentdock.newSession",
        "title": "New Agent Session",
        "icon": "$(add)"
      },
      {
        "command": "agentdock.endSession",
        "title": "End Session",
        "icon": "$(trash)"
      },
      {
        "command": "agentdock.renameSession",
        "title": "Rename Session"
      },
      {
        "command": "agentdock.focusSession",
        "title": "Switch Agent Session"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "agentdock.newSession",
          "when": "view == agentdock.sessionsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "agentdock.endSession",
          "when": "viewItem == session",
          "group": "inline"
        },
        {
          "command": "agentdock.renameSession",
          "when": "viewItem == session"
        },
        {
          "command": "agentdock.focusSession",
          "when": "viewItem == session",
          "group": "inline"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "agentdock.sessionsView",
        "contents": "No active agent sessions.\n[New Agent Session](command:agentdock.newSession)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
